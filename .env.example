# Database URL
# Для SQLite (по умолчанию):
DATABASE_URL=sqlite:///./quests.db

# Для PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/quest_db

# Для PostgreSQL на Render или Heroku:
# DATABASE_URL=postgres://username:password@hostname:5432/dbname
# (автоматически конвертируется в postgresql://)

# Application settings
APP_NAME=Quest App
DEBUG=False

# Quest settings
MAX_PARENT_QUESTS=10
MAX_SUBTASKS=50
DEFAULT_QUEST_DEADLINE_DAYS=1

# Generator settings (seconds)
GENERATOR_CHECK_INTERVAL=300
